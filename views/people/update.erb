<div class="update-user-container">
  <form class="form-update-user" action="/person/<%= @person.id %>/update" method="POST">
    <div class="update-first-name">
      <label class="update-user-form-label" for="first-name">First name:</label>
      <input type="text" name="first_name" id="first-name" value="<%= @person.first_name %>" required>
    </div>
    <div class="update-last-name">
      <label class="update-user-form-label" for="last-name">Last name:</label>
      <input type="text" name="last_name" id="last-name" value="<%= @person.last_name %>" required>
    </div>
    <div class="update-budget">
      <label class="update-user-form-label" for="budget">Budget limit:</label>
      <input type="number" name="budget" id="budget" value="<%= @person.budget %>" min="0.01" step="0.01" required>
    </div>
    <div class="update-submit">
      <input type="submit" value="OK">
    </div>
  </form>
</div>
