<div class="total-value">
  <p>Total spent: £<%= @transaction_value %></p>
</div>
<form action="/person/<%= @person.id %>/searchbytag/" method="post">
  <select name="tag_id" id="tag-select">
    <% for tag in @tags %>
      <option value="<%= tag.id %>"><%= "#{tag.name}" %></option>
    <% end %>
  </select>
  <input type='submit' value="OK">
</form>
<div class="items-container">
  <% for transaction in @transactions %>
    <div class="item">
      <div class="item-block">
        <div class="filler-left"></div>
          <p class="merchant_name"><%= "#{transaction.merchant_name}" %></p>
          <p class="value">£<%= "#{transaction.value}" %></p>
          <p class="tag"><%= "#{transaction.tag().name}" %></p>
          <div class="filler-right">
            <a class="btn-edit" href="/person/<%= @person.id %>/transactions/<%= transaction.id %>/update"><p>Edit</p></a>
            <a class="btn-delete" href=""><p>Delete</p></a>
          </div>
      </div>
    </div>
  <% end %>
</div>